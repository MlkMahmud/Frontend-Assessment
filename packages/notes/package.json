{
  "name": "@tuteria/notes",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development babel-node -r dotenv/config server/index.ts --extensions \".ts\"",
    "build:next": "next build",
    "build:server": "babel server --out-dir dist --extensions \".ts\"",
    "build": "yarn build:next && yarn build:server",
    "start": "cross-env NODE_ENV=production node dist/",
    "test": "cross-env DATABASE_URL=$TEST_DATABASE_URL jest --runInBand --setupFiles dotenv/config",
    "db:update": "prisma introspect",
    "db:generate": "prisma generate"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "next": "9.4.4"
  }
}
